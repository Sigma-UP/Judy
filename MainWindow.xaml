<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200" ResizeMode="CanMinimize">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="#FF630B36">
            <TextBlock Foreground ="#FF018574" x:Name="tbox_currTime"
                       Text="Time" FontSize="40" Margin="0,20,10,0"
                       HorizontalAlignment="Center"/>
            <TextBlock Foreground ="#FF056356" x:Name="tbox_currDate" 
                       Text="Date" FontSize="15" Margin="0,0,10,0" 
                       HorizontalAlignment="Center"/>
            <Button Margin="10, 26, 10, 0" Height="50" 
                    Content="Current Tasks" FontSize="20"
                    BorderBrush="#FF701643"
                    Background="#FF018574" Foreground="#FF701643"/>
            <Button Margin="10, 10, 10, 0" Height="50" 
                    Content="Finished Tasks" FontSize="20"
                    BorderBrush="#FF701643"
                    Background="#FF018574" Foreground="#FF701643"/>

        </StackPanel>

        <Frame NavigationUIVisibility="Hidden" Source="Manager.xaml"
               Grid.Column="1" Background="#FF701643"/>
    </Grid>
</Window>
